<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:elevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_above="@id/menuCard"



        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblBookTraining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_67sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Book Training"
                        android:textColor="#25408f"
                        android:textSize="@dimen/_20sdp"


                        />

                    <ImageView
                        android:id="@+id/lblLogo"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="@dimen/_52sdp"

                        android:layout_marginBottom="@dimen/_2sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"

                        android:src="@drawable/logo" />
                </LinearLayout>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@color/black" />


                <TextView
                    android:id="@+id/txtSelectedTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Name of The Selected Training"
                    android:textColor="#FF0000"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/relPortion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="vertical"
                    android:padding="0dp">


                    <LinearLayout
                        android:id="@+id/layoutCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="vertical"


                        >


                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginTop="0dp"
                                android:elevation="0dp"
                                app:cardBackgroundColor="#ADD8E6"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp"

                                >

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_250sdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_240sdp"
                                        android:orientation="vertical"

                                        >


                                        <TextView
                                            android:id="@+id/txtInstructor"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/_10sdp"
                                            android:layout_marginTop="@dimen/_15sdp"
                                            android:gravity="center"
                                            android:text="Training Instructor: "
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_14sdp" />

                                        <View
                                            android:id="@+id/divider"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:background="@color/black" />

                                        <TextView
                                            android:id="@+id/txtDescription"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Description: "
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp" />

                                        <TextView
                                            android:id="@+id/txtDate"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Date:"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp" />

                                        <TextView
                                            android:id="@+id/txtTime"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Time:"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp" />

                                        <TextView
                                            android:id="@+id/txtLocation"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Location:"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp" />
                                    </LinearLayout>
                                </ScrollView>
                            </androidx.cardview.widget.CardView>


                        <Button
                            android:id="@+id/btnSave"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="@dimen/_25sdp"
                            android:text="Save" />

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Cancel" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/menuCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="0dp">

        <include layout="@layout/menubar" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>